@model IEnumerable<Lab2.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Studentai</h2>

<p>
    @Html.ActionLink("Pridėti naują studentą", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Vardas
        </th>
        <th>
            Pavardė
        </th>
        <th>
            Registracijos data
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnrollmentDate)
        </td>
        <td>
            @Html.ActionLink("Redaguoti", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Išsamiau", "Details", new { id=item.ID }) |
            @Html.ActionLink("Ištrinti", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
